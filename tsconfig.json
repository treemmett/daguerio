{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "build",
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/**"]
}
